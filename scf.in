&CONTROL
    calculation = 'scf'
    max_seconds = 8.64000e+04
    prefix = 'si'
    pseudo_dir = '.'
    outdir = './out'
    tprnfor = .TRUE.
    tstress = .TRUE.
/
&SYSTEM
    ibrav = 3                   ! BCC lattice
    celldm(1) = 10.3846          ! Lattice constant in Bohr (2.84812 Ã… * 1.88973 = 10.3846)
    nat = 2
    ntyp = 1
    ecutwfc = 40.0
    ecutrho = 400.0
    occupations = 'smearing'
    smearing = 'gaussian'
    degauss = 0.01
    nspin = 2
    starting_magnetization(1) = 0.2
/
&ELECTRONS
    conv_thr = 1.0e-06
    electron_maxstep = 200
    mixing_beta = 0.4
    startingpot = 'atomic'
    startingwfc = 'atomic+random'
/
ATOMIC_SPECIES
 Si  55.845  Si.pbe-nd-rrkjus.UPF
ATOMIC_POSITIONS {crystal}
 Si  0.0  0.0  0.0
 Si  0.5  0.5  0.5
K_POINTS {automatic}
 8 8 8 0 0 0